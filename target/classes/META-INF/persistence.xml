<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="go" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:pessoa_db;create=true" />
            <property name="javax.persistence.jdbc.user" value="designa" />
            <property name="javax.persistence.jdbc.password" value="123" />
            <!-- Configuração do Hibernate (opcional) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
        </properties>
    </persistence-unit>

</persistence>
